{
  "name": "device-info",
  "version": "1.0.0",
  "description": "Get device information from browser",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --config jestconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sprtkd/device-info.git"
  },
  "keywords": [
    "device",
    "device-info",
    "device-spec",
    "specification",
    "device-details"
  ],
  "author": "sprtkd",
  "files": [
    "lib/**/*"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sprtkd/device-info/issues"
  },
  "homepage": "https://github.com/sprtkd/device-info#readme",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.3"
  }
}
